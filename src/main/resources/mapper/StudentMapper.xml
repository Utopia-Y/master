<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.test.mapper.UserMapper">

    <!--根据ID查询用户信息-->
    <select id="selectStudentById" parameterType="String" resultType="com.example.sbt.bean.StudentBean">
        SELECT * FROM account
        WHERE id = #{id};
    </select>

    <!--插入新用户信息-->
    <insert id="addStudent" parameterType="com.example.sbt.bean.StudentBean">
        INSERT InTO
            account(id,name,money)
        values
            (#{id},#{name},#{money});
    </insert>

    <!--根据ID删除用户，返回数据库操作影响行数，为0则是失败-->
    <delete id="deleteStudent" parameterType="String">
        DELETE FROM account
        WHERE id = #{id};
    </delete>

    <!--根据ID修改用户信息，返回数据库操作影响行数，为0则是失败-->
    <update id="modifyStudnet" parameterType="com.example.sbt.bean.StudentBean">
        UPDATE account
        SET name = #{name},
            money = #{money}
        WHERE id = #{id};
    </update>

    <!--查询所有用户信息，返回一个List<Bean>-->
    <select id="getAllStudent" resultType="com.example.sbt.bean.StudentBean">
        SELECT * FROM account ;
    </select>

</mapper>